@model BuildingManagement.Models.Billledger



@{
    ViewData["Title"] = "Billing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary" style="background-color: #31849B;color: white">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">
                    @ViewData["Title"] Details
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.BillId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BillId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.BillNo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BillNo)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TranDte)
                            </dt>
                            <dd class="col-sm-10">
                                @Convert.ToDateTime(Model.TranDte).ToString("dd-MM-yyyy")
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Tenant)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Tenant)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Billitem)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Billitem)
                            </dd>
                            
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.BillAmt)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BillAmt)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.PaidAmt)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.PaidAmt)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.PayDte)
                            </dt>
                            <dd class="col-sm-10">
                                @Convert.ToDateTime(Model.PayDte).ToString("dd-MM-yyyy")
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.GeneratedDte)
                            </dt>
                            <dd class="col-sm-10">
                                @Convert.ToDateTime(Model.GeneratedDte).ToString("dd-MM-yyyy")
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Remark)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Remark)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DueDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Convert.ToDateTime(Model.DueDate).ToString("dd-MM-yyyy")
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Company)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Company)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.User)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.User)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RevDteTime)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RevDteTime)
                            </dd>

                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Details">
                    <input type="hidden" asp-for="BillId" />


                </form>

            </div>
        </div>
    </div>
    
</section>



