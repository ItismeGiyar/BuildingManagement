@model BuildingManagement.Models.BillItemTenant

@{
    ViewData["Title"] = "Tenant Subscribe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="BtitemId" />
                            <div class="form-group">
                                <label asp-for="BItemId" class="control-label"></label>
                                <select asp-for="BItemId" class="form-control form-select" asp-items="@ViewBag.BillitemList">
                                    <option value=""> - Select One - </option>
                                </select>
                                <span asp-validation-for="BItemId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TenantId" class="control-label"></label>
                                <select asp-for="TenantId" class="form-control form-select" asp-items="@ViewBag.TenantList">
                                    <option value=""> - Select One - </option>
                                </select>
                                <span asp-validation-for="TenantId" class="text-danger"></span>
                            </div>
                          
                            <div class="form-group">
                                <label asp-for="SubDte" class="control-label"></label>
                                <input asp-for="SubDte" class="form-control" />
                                <span asp-validation-for="SubDte" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="ActiveFlg" /> @Html.DisplayNameFor(model => model.ActiveFlg)
                                </label>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastReadingUnit" class="control-label"></label>
                                <input asp-for="LastReadingUnit" class="form-control" />
                                <span asp-validation-for="LastReadingUnit" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Amount" class="control-label"></label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}


