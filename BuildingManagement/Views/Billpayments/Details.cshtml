@model BuildingManagement.Models.BillPayment

@{
    ViewData["Title"] = "Bill Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">
                    @ViewData["Title"] Details
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Bill)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Bill)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.BillOffsetDesc)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BillOffsetDesc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.PayAmt)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.PayAmt)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CurrCde)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CurrCde)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CurrRate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CurrRate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CmpyId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CmpyId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.UserId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UserId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RevDteTime)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RevDteTime)
                            </dd>
                        </dl>

                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Details">
                    <input type="hidden" asp-for="BillPId" />
                </form>
            </div>
        </div>
    </div>
</section>



