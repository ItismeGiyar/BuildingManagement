@model BuildingManagement.Models.PropertyRoom




@{
    ViewData["Title"] = "Property Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-6">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="col-6">
                <div class="breadcrumb float-right active">
                    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fas fa-back"></i></a>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-gray">
            <div class="card-header">
                <h3 class="card-title">
                    Are you sure you want to delete this?
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">

                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RoomId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RoomId)
                            </dd>
                           
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RoomNo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RoomNo)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.PropertyInfo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.PropertyInfo)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Tenant)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Tenant)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.BuildingType)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.BuildingType)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Location)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Location)
                            </dd>
                            
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SqFullMeasure)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SqFullMeasure)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SqRooMeasure)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SqRooMeasure)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.AmenityDesc)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.AmenityDesc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FeatureDesc)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.FeatureDesc)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Addr)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Addr)
                            </dd>
                            
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="RoomId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />

                </form>

            </div>
        </div>
    </div>
</section>



